<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222C36"
    android:orientation="horizontal" >
    
    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/stopwatch_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/stopwatch_bg" />
        <TextView 
             android:id="@+id/myTime"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:text="00:00:00"
             android:textSize="40sp"
             android:textStyle="bold"
             android:textColor="#FFFFFF"/>
        
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >
            
            <ImageButton
	            android:id="@+id/btnStartStop"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="30dp"
	            android:layout_alignParentTop="true"
	            android:layout_marginTop="30dp"
	            android:src="@drawable/stopwatch_start"
	            android:background="#212B35"/>
        
        <ImageButton 
            android:id="@+id/btnCountReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_alignTop="@id/btnStartStop"
            android:layout_alignBottom="@id/btnStartStop"
            android:src="@drawable/stopwatch_count"
            android:background="#212B35"/>
            
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            >
            
            <ImageView 
                android:id="@+id/iv_listbg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/stopwatch_listbg"/>
            
            <TextView 
	            android:id="@+id/tv_danwei"
	            android:text="单位"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"	            
	            android:layout_alignTop="@id/iv_listbg"
	            android:layout_marginTop="10dp"
	            android:layout_centerHorizontal="true"/>
            <TextView 
	            android:id="@+id/tv_jici"
	            android:text="计次"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@id/tv_danwei"
	            android:layout_alignBottom="@id/tv_danwei"
	            android:layout_marginRight="70dp"/>
	        <TextView 
	            android:id="@+id/tv_lj"
	            android:text="累计"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/tv_danwei"
	            android:layout_alignBottom="@id/tv_danwei"
	            android:layout_marginLeft="70dp"/>
	        
	        <TextView 
	            android:id="@+id/tv_jici_userdata1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/tv_jici"
	            android:layout_alignLeft="@id/tv_jici"/>
	        <TextView 
	            android:id="@+id/tv_danwei_userdata1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/tv_jici"
	            android:layout_alignLeft="@id/tv_danwei"/>
	        <TextView 
	            android:id="@+id/tv_leiji_userdata1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/tv_jici"
	            android:layout_alignLeft="@id/tv_lj"/>   
	            
	        <TextView 
	            android:id="@+id/tv_jici_userdata2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"            
	            android:layout_alignLeft="@id/tv_jici"
	            android:layout_below="@id/tv_jici_userdata1"/>
	        <TextView 
	            android:id="@+id/tv_danwei_userdata2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@id/tv_danwei"
	            android:layout_below="@id/tv_jici_userdata1"/>
	        <TextView 
	            android:id="@+id/tv_leiji_userdata2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@id/tv_lj"
	            android:layout_below="@id/tv_jici_userdata1"/>  
	        
	        <TextView 
	            android:id="@+id/tv_jici_userdata3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"       
	            android:layout_alignLeft="@id/tv_jici"
	            android:layout_below="@id/tv_jici_userdata2"/>
	        <TextView 
	            android:id="@+id/tv_danwei_userdata3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@id/tv_danwei"
	            android:layout_below="@id/tv_jici_userdata2"/>
	        <TextView 
	            android:id="@+id/tv_leiji_userdata3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@id/tv_lj"
	            android:layout_below="@id/tv_jici_userdata2"/> 
        </RelativeLayout>
    </LinearLayout>
    
    
</LinearLayout>