<!-- 需要drawable里面的timestyle.xml -->
<!-- 在配置文件的activity里面加android:screenOrientation="landscape" android:theme="@android:style/Theme.NoTitleBar" -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D6D6"
    tools:context=".MainActivity" >

     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"			   		
        android:layout_weight="8"
        android:orientation="horizontal">
         
         <LinearLayout        
             android:layout_width="fill_parent"        
             android:layout_height="fill_parent"		
             android:layout_weight="3"
             android:orientation="vertical">

             <RelativeLayout
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_weight="2"
                 android:background="@drawable/timestyle" >

                 <TextView
                     android:id="@+id/time_1"
                     android:layout_width="80dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                     android:layout_marginBottom="45dp"
                     android:layout_marginLeft="30dp"
                     android:text="00:10:3"
                     android:textSize="20sp"
                     android:textColor="#434343" />

                 <ImageView
                     android:id="@+id/time_line1"                                        android:layout_width="120dp"
                     android:layout_height="wrap_content"
                     android:src="@drawable/time_line"
                     android:layout_alignParentBottom="true"
                     android:layout_marginLeft="6dp"
                     android:layout_marginBottom="20dp" />

                 <ImageView
                     android:id="@+id/time_trash"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignLeft="@+id/time_line1"
                     android:layout_alignParentTop="true"
                     android:src="@drawable/time_trash" />

             </RelativeLayout>

             <RelativeLayout         
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"   
                 android:layout_weight="3"
                 android:background="@drawable/timestyle">
                 
                 <TextView
                     android:id="@+id/time_3"
                     android:layout_width="80dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                     android:layout_marginBottom="40dp"
                     android:layout_marginLeft="30dp"
                     android:text="00:10:3"
                     android:textSize="20sp"
                     android:textColor="#434343" />

                 <ImageView
                     android:id="@+id/time_line3"                                        android:layout_width="120dp"
                     android:layout_height="wrap_content"
                     android:src="@drawable/time_line"
                     android:layout_alignParentBottom="true"
                     android:layout_marginLeft="6dp"
                     android:layout_marginBottom="20dp" />
        		
        	</RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"	
                android:layout_weight="3"
                android:background="@drawable/timestyle">
                 <TextView
                     android:id="@+id/time_5"
                     android:layout_width="80dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                     android:layout_marginBottom="40dp"
                     android:layout_marginLeft="30dp"
                     android:text="00:10:3"
                     android:textSize="20sp"
                     android:textColor="#434343" />

                 <ImageView
                     android:id="@+id/time_line5"                                        android:layout_width="120dp"
                     android:layout_height="wrap_content"
                     android:src="@drawable/time_line"
                     android:layout_alignParentBottom="true"
                     android:layout_marginLeft="6dp"
                     android:layout_marginBottom="20dp" />
        		
             </RelativeLayout>
             
         </LinearLayout>
         
         <FrameLayout        
             android:layout_width="fill_parent"        
             android:layout_height="fill_parent"
             android:layout_weight="2"
             android:background="@drawable/timestyle"
             android:orientation="vertical">
            
             <ImageView                 
                android:layout_width="wrap_content"        
             	android:layout_height="wrap_content"
             	android:layout_gravity="center_vertical"
             	android:src="@drawable/time_round"/>
             
             <TextView 
                 android:id="@+id/mytime"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:text="00:00:0"
                 android:textSize="55sp"
                 android:textColor="#434343"/>
             
             <TextView 
                 android:id="@+id/time_start"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
				 android:layout_marginTop="180dp"
                 android:text="START"
                 android:textSize="35sp"
                 android:textColor="#F75054"/>
             
             <ImageView
                 android:id="@+id/time_pause"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="180dp"
                 android:layout_marginLeft="60dp"/>

             <ImageView
                 android:id="@+id/time_stop"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="180dp"
                 android:layout_marginLeft="160dp"/>
                        
         </FrameLayout>
         
         <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"			   		
	        android:layout_weight="3"
	        android:orientation="vertical">
             
			<RelativeLayout
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_weight="2"
                 android:background="@drawable/timestyle" >

                 <TextView
                     android:id="@+id/time_2"
                     android:layout_width="80dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                     android:layout_marginBottom="45dp"
                     android:layout_marginLeft="30dp"
                     android:text="00:10:3"
                     android:textSize="20sp"
                     android:textColor="#434343" />

                 <ImageView
                     android:id="@+id/time_line2"                                        android:layout_width="120dp"
                     android:layout_height="wrap_content"
                     android:src="@drawable/time_line"
                     android:layout_alignParentBottom="true"
                     android:layout_marginLeft="6dp"
                     android:layout_marginBottom="20dp" />

             </RelativeLayout>
             
			<RelativeLayout         
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"   
                 android:layout_weight="3"
                 android:background="@drawable/timestyle">
                 
                 <TextView
                     android:id="@+id/time_4"
                     android:layout_width="80dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                     android:layout_marginBottom="40dp"
                     android:layout_marginLeft="30dp"
                     android:text="00:10:3"
                     android:textSize="20sp"
                     android:textColor="#434343" />

                 <ImageView
                     android:id="@+id/time_line4"                                        android:layout_width="120dp"
                     android:layout_height="wrap_content"
                     android:src="@drawable/time_line"
                     android:layout_alignParentBottom="true"
                     android:layout_marginLeft="6dp"
                     android:layout_marginBottom="20dp" />
        		
        	</RelativeLayout>
        	
			<RelativeLayout         
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"   
                 android:layout_weight="3"
                 android:background="@drawable/timestyle">
                 
                 <TextView
                     android:id="@+id/time_6"
                     android:layout_width="80dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                     android:layout_marginBottom="40dp"
                     android:layout_marginLeft="30dp"
                     android:text="00:10:3"
                     android:textSize="20sp"
                     android:textColor="#434343" />

                 <ImageView
                     android:id="@+id/time_line6"                                        android:layout_width="120dp"
                     android:layout_height="wrap_content"
                     android:src="@drawable/time_line"
                     android:layout_alignParentBottom="true"
                     android:layout_marginLeft="6dp"
                     android:layout_marginBottom="20dp" />
        	</RelativeLayout>
             
         </LinearLayout>
         
     </LinearLayout>
     
</RelativeLayout>
